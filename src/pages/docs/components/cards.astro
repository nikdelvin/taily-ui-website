---
import Layout from '../../../layouts/Layout.astro'
import Card from '../../../components/Card.astro'
import { Code } from 'astro:components'
import Taily from '../../../icons/taily.astro'
---

<Layout
    title="Taily UI - Card Component"
    description="Beautiful, fast, and modern UI Library 100% built and animated with pure Tailwind CSS."
    keywords="web de, website, logo design, graphic design, website design, website builder, website templates, web development, graphic designer, web page, brochure design, web designer, webdesign, web developer, ecommerce website, create a website, logo designer, free website templates, web design company, website creator, design logo, website designer, responsive web design, create website, criar site"
    url="https://tailyui.by.nikdelv.in/"
    imageUrl="https://nikdelv.in/projects/tailyui.jpg"
    brand="Taily UI"
    color="secondary"
>
    <main class="select-none overflow-hidden">
        <div class="flex h-screen w-screen flex-col overflow-y-scroll">
            <div class="h-full bg-zinc-950 text-zinc-50">
                <div class="flex h-full w-full flex-col items-center justify-start gap-4 p-16">
                    <div class="flex h-full w-full flex-row gap-4">
                        <div class="flex h-full w-[300px] flex-col overflow-y-scroll">
                            <a
                                class="mb-4 flex flex-row items-center gap-2"
                                href="/"
                            >
                                <div class="h-[40px] w-[40px]"><Taily /></div>
                                <h1
                                    class="bg-gradient-to-r from-violet-500 to-sky-500 bg-clip-text text-4xl font-bold leading-tight text-transparent"
                                >
                                    Taily UI
                                </h1>
                            </a>
                            <h1 class="mb-4 text-lg">Components</h1>
                            <div class="mb-4 flex flex-row items-center gap-2">
                                <div class="mx-2 my-auto flex h-[4px] w-[4px] rounded-full bg-zinc-500"></div>
                                <a
                                    class="text-zinc-500"
                                    href="/docs/components/buttons"
                                    >Buttons</a
                                >
                            </div>
                            <div class="mb-4 flex flex-row items-center gap-2">
                                <div class="mx-2 my-auto flex h-[4px] w-[4px] rounded-full bg-zinc-500"></div>
                                <a
                                    class="text-zinc-500"
                                    href="/docs/components/button-groups"
                                    >Button Groups</a
                                >
                            </div>
                            <div class="mb-4 flex flex-row items-center gap-2">
                                <div class="mx-2 my-auto flex h-[4px] w-[4px] rounded-full bg-zinc-500"></div>
                                <h3 class="text-zinc-50">Cards</h3>
                            </div>
                        </div>
                        <div class="flex h-full w-full flex-col overflow-y-scroll">
                            <div
                                class="flex h-auto flex-col rounded-xl border-[1px] border-solid border-zinc-500/10 bg-zinc-900 p-6 antialiased outline-none"
                            >
                                <h1 class="text-4xl font-bold">Cards</h1>
                            </div>
                            <div class="flex flex-col px-6">
                                <p class="mt-8 text-lg">Cards allow users to structure content across the website.</p>
                                <hr
                                    class="my-8 h-[1px] w-full shrink-0 border-none bg-zinc-500/50"
                                    role="separator"
                                />
                                <h3 class="mb-4 text-3xl font-medium">Usage</h3>
                                <div
                                    class="mb-4 flex h-auto flex-col rounded-xl border-[1px] border-solid border-zinc-500/10 bg-zinc-900 p-4 antialiased outline-none"
                                >
                                    <h1
                                        class="mb-4 ml-[-8px] mt-[-8px] text-base font-normal leading-none text-zinc-500"
                                    >
                                        Preview
                                    </h1>
                                    <Card addClass="!w-[160px] !min-w-[160px] !h-[90px] !min-h-[90px]">Card</Card>
                                </div>
                                <div
                                    class="flex h-auto flex-col rounded-xl border-[1px] border-solid border-zinc-500/10 bg-zinc-900 p-4 antialiased outline-none"
                                >
                                    <h1
                                        class="mb-4 ml-[-8px] mt-[-8px] text-base font-normal leading-none text-zinc-500"
                                    >
                                        Code
                                    </h1>
                                    <div class="overflow-hidden rounded-xl bg-[#1E1E1E] p-4">
                                        <Code
                                            code={`<div data-color="default" class="card">Card</div>`}
                                            lang="js"
                                            theme="dark-plus"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
